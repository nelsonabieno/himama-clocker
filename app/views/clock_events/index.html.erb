
<% if flash[:update_success]%>
    <strong> <%= content_tag :span, flash[:update_success], class: "text-success notice", id: "puffly" %> </strong>
<% end %>

<% if flash[:update_error]%>
    <strong> <%= content_tag :span, flash[:update_error], class: "text-danger text-bold notice", id: "puffly" %> </strong>
<% end %>

<table class="table">
  <thead class="text-primary">
  <tr >
    <th scope="col">#</th>
    <th scope="col">User Nickname</th>
    <th scope="col">Firstname</th>
    <th scope="col">Lastname</th>
    <th scope="col">Login Status</th>
    <th scope="col">Email</th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <%@user.each do |user|%>
    <tr>
      <td> <%= user.id%></td>
      <td><%= user.user_nick%></td>
      <td><%= user.firstname%></td>
      <td><%= user.lastname%></td>
      <td><%= user.login_status%></td>
      <td><%= user.email%></td>
      <td>
        <%= link_to 'View Event Logs', userclockevent_path(:id => user.id), method: :get, :class=>"btn btn-primary btn-rounded mb-4" %>
      </td>
    </tr>
  <%end %>
  </tbody>
</table>



